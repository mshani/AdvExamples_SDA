@{
    ViewData["Title"] = "Overview";
}
@model List<Expense>
<div class="text-center">
    <a class="btn btn-primary" asp-controller="Home" asp-action="UpsertExpense">Create Expense</a>
    <h3>Expenses</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Value.ToString("N2")</td>
                    <td>@expense.Description</td>
                    <td>@expense.ExpenseDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-warning" asp-action="UpsertExpense" asp-route-id="@expense.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</div>