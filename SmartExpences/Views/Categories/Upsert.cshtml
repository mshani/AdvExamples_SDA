@using SmartExpenses.Models.Enums
@{
    ViewData["Title"] = "Create/Update category";
}

@model SmartExpenses.Models.Category

<div class="text-center">
    <h2>Create or Update a category</h2>
</div>

<form asp-action="Upsert" method="post">
    <label hidden>Id</label>
    <input hidden type="number" class="form-control" asp-for="Id"/>
    <label>Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <label>Description</label>
    <input type="text" class="form-control" asp-for="Description" />
    <label>Category</label>
    <select required class="form-control" asp-for="CategoryType" asp-items="Html.GetEnumSelectList<CategoryTypeEnum>()">
        <option selected="selected" value="">Please select</option>
    </select>
    <input  class="btn btn-primary" type="submit" value="Save"/>
</form>
