@{
    ViewData["Title"] = "Incomings";
}
@model List<Incoming>

<div class="text-center">
    <h3 class="text-center">Incomings Overview</h3>
    <hr />
    <div class="row">
        <div class="col d-flex justify-content-between">
            <h3 class="tbtn btn-secondary mx-auto" style="margin:auto">ALL @Model.Sum(x => x.Value) </h3>
            <a class="btn btn-primary float-right" asp-controller="Incomings" asp-action="Upsert">New</a>
        </div>

    </div>
    <br />
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Date</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Value.ToString("N2")</td>
                    <td>@item.Description</td>
                    <td>@item.ExpenseDate.ToShortDateString()</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>